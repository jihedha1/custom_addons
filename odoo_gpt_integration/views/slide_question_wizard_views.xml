<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="slide_question_wizard_view_form" model="ir.ui.view">
        <field name="name">slide.question.wizard.form</field>
        <field name="model">slide.question.wizard</field>
        <field name="arch" type="xml">
            <form>
                <h2>Créer une nouvelle question</h2>
                <group>
                    <field name="channel_id" invisible="1"/>
                    <field name="slide_id"/>
                    <field name="x_question_type" widget="radio"/>
                    <field name="question"/>
                </group>

                <!-- Section pour QCM -->
                <field name="answer_lines"
                       nolabel="1"
                       invisible="x_question_type != 'simple_choice'">
                    <tree editable="bottom">
                        <field name="text_value"/>
                        <field name="is_correct"/>
                    </tree>
                </field>

                <!-- Section pour Vrai/Faux -->
                <field name="answer_lines"
                       nolabel="1"
                       invisible="x_question_type != 'true_false'">
                    <tree editable="bottom" create="false" delete="false">
                        <field name="text_value" readonly="1"/>
                        <field name="is_correct"/>
                    </tree>
                </field>

                <!-- Message pour questions ouvertes -->
                <div class="alert alert-info"
                     role="alert"
                     invisible="x_question_type != 'text_box'">
                    <strong>ℹ️ Question à réponse ouverte</strong>
                    <p>Ce type de question ne nécessite pas de réponses prédéfinies.
                       Les étudiants rédigeront leur réponse librement.</p>
                </div>

                <footer>
                    <button name="action_create_question"
                            string="Créer la Question"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_slide_question_wizard" model="ir.actions.act_window">
        <field name="name">Ajouter une Question Manuellement</field>
        <field name="res_model">slide.question.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_channel_id': active_id}</field>
    </record>
</odoo>