<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================================================================== -->
    <!-- VUE LISTE POUR AFFICHER TOUS LES FOURNISSEURS CONFIGURÃ‰S -->
    <!-- ================================================================== -->

    <record id="view_ai_provider_config_tree" model="ir.ui.view">
        <field name="name">ai.provider.config.tree</field>
        <field name="model">ai.provider.config</field>
        <field name="arch" type="xml">
            <tree string="Fournisseurs IA" decoration-muted="active == False">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="provider_type"/>
                <field name="api_base_url"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- VUE FORMULAIRE POUR CRÃ‰ER/MODIFIER UN FOURNISSEUR -->
    <!-- ================================================================== -->

    <record id="view_ai_provider_config_form" model="ir.ui.view">
        <field name="name">ai.provider.config.form</field>
        <field name="model">ai.provider.config</field>
        <field name="arch" type="xml">
            <form string="Configuration du Fournisseur IA">
                <header>
                    <button name="action_test_connection"
                            string="ðŸ” Tester la Connexion"
                            type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nom du Fournisseur"/>
                        <h1>
                            <field name="name" placeholder="Ex: OpenAI GPT-4"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Configuration de Base">
                            <field name="provider_type"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="sequence"/>
                        </group>
                        <group string="API">
                            <field name="api_base_url" placeholder="https://api.example.com/v1"/>
                            <field name="api_key" password="True" placeholder="sk-..."/>
                            <field name="model_name" placeholder="ex: mistral, llama3, ..."/>
                        </group>
                    </group>

                    <group string="Configuration AvancÃ©e">
                        <group>
                            <field name="temperature"/>
                            <field name="max_tokens"/>
                            <field name="timeout"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes internes sur ce fournisseur..."/>
                        </page>

                        <page string="Statistiques d'Utilisation">
                            <group>
                                <field name="total_requests" readonly="1"/>
                                <field name="last_request_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- ACTION POUR AI.PROVIDER.CONFIG -->
    <!-- ================================================================== -->

    <record id="action_ai_provider_config" model="ir.actions.act_window">
        <field name="name">Fournisseurs IA</field>
        <field name="res_model">ai.provider.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================================================================== -->
    <!-- MENUS -->
    <!-- ================================================================== -->

    <menuitem id="menu_ai_root"
              name="IA E-Learning"
              sequence="100"
              web_icon="odoo_gpt_integration,static/description/icon.png"/>

</odoo>