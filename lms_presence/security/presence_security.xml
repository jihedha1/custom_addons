<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ========== CATÉGORIE ========== -->
        <record id="module_category_formation" model="ir.module.category">
            <field name="name">Formation</field>
            <field name="description">Gestion des formations et présences</field>
            <field name="sequence">10</field>
        </record>

        <!-- ========== GROUPES DE SÉCURITÉ ========== -->
        <record id="group_participant" model="res.groups">
            <field name="name">Participant</field>
            <field name="category_id" ref="module_category_formation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_teacher" model="res.groups">
            <field name="name">Enseignant</field>
            <field name="category_id" ref="module_category_formation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Manager Formation</field>
            <field name="category_id" ref="module_category_formation"/>
            <field name="implied_ids" eval="[(4, ref('group_teacher'))]"/>
        </record>

    </data>
</odoo>