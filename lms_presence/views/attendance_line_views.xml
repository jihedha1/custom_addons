<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view attendance lines -->
        <record id="view_attendance_line_tree" model="ir.ui.view">
            <field name="name">lms_presence.attendance_line.tree</field>
            <field name="model">lms_presence.attendance_line</field>
            <field name="arch" type="xml">
                <tree string="Feuille de présence">
                    <field name="participant_name"/>
                    <field name="session_name"/>
                    <field name="channel_id"/>
                    <field name="session_date_start"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'present'"
                           decoration-danger="state == 'absent'"
                           decoration-warning="state == 'late'"
                           decoration-info="state == 'excused'"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="worked_hours"/>
                    <field name="validated_by_participant" widget="boolean"/>
                    <field name="validated_by_teacher" widget="boolean"/>
                    <field name="has_disability" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Form view attendance lines -->
        <record id="view_attendance_line_form" model="ir.ui.view">
            <field name="name">lms_presence.attendance_line.form</field>
            <field name="model">lms_presence.attendance_line</field>
            <field name="arch" type="xml">
                <form string="Présence">
                    <!-- Champs invisibles pour les conditions -->
                    <field name="session_state" invisible="1"/>
                    <field name="has_disability" invisible="1"/>

                    <header>
                        <button name="action_validate_participant" type="object"
                                string="Valider ma présence"
                                class="btn-primary"
                                invisible="validated_by_participant or session_state != 'in_progress'"/>
                        <button name="action_validate_teacher" type="object"
                                string="Valider (Enseignant)"
                                class="btn-primary"
                                invisible="validated_by_teacher"/>
                        <button name="action_mark_present" type="object"
                                string="Marquer présent"
                                class="btn-success"
                                invisible="state == 'present'"/>
                        <button name="action_mark_absent" type="object"
                                string="Marquer absent"
                                class="btn-danger"
                                invisible="state == 'absent'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,present,absent,late,excused"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="participant_name" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="session_name" readonly="1"/>
                            </h2>
                        </div>

                        <group>
                            <group string="Session">
                                <field name="session_id" readonly="1"/>
                                <field name="channel_id" readonly="1"/>
                                <field name="session_date_start" readonly="1"/>
                                <field name="session_date_end" readonly="1"/>
                                <field name="session_location" readonly="1"/>
                                <field name="teacher_id" readonly="1"/>
                            </group>
                            <group string="Participant">
                                <field name="participant_id" readonly="1"/>
                                <field name="participant_email" readonly="1"/>
                                <field name="participant_phone" readonly="1"/>
                            </group>
                        </group>

                        <group string="Présence">
                            <group>
                                <field name="check_in"/>
                                <field name="check_out"/>
                                <field name="worked_hours" readonly="1"/>
                            </group>
                            <group>
                                <field name="is_late" readonly="1"/>
                                <field name="late_minutes" readonly="1"
                                       invisible="not is_late"/>
                                <field name="late_reason"
                                       invisible="not is_late"/>
                            </group>
                        </group>

                        <group string="Validations">
                            <group>
                                <field name="validated_by_participant" readonly="1"/>
                                <field name="validation_date_participant" readonly="1"
                                       invisible="not validated_by_participant"/>
                            </group>
                            <group>
                                <field name="validated_by_teacher" readonly="1"/>
                                <field name="validation_date_teacher" readonly="1"
                                       invisible="not validated_by_teacher"/>
                            </group>
                        </group>

                        <group string="Accessibilité"
                               invisible="not has_disability">
                            <group>
                                <field name="disability_type" readonly="1"/>
                                <field name="emergency_contact" readonly="1"/>
                                <field name="emergency_phone" readonly="1"/>
                            </group>
                            <group col="1">
                                <field name="disability_description" readonly="1"
                                       nolabel="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Absence" name="absence"
                                  invisible="state not in ['absent', 'excused']">
                                <group>
                                    <group>
                                        <field name="absence_reason"/>
                                        <field name="absence_justification_file"
                                               filename="absence_justification_filename"/>
                                        <field name="absence_justification_filename" invisible="1"/>
                                    </group>
                                    <group col="1">
                                        <field name="absence_justification"
                                               placeholder="Justification de l'absence..."/>
                                    </group>
                                </group>
                            </page>

                            <page string="Notes" name="notes">
                                <group>
                                    <field name="notes" string="Notes générales"
                                           placeholder="Notes générales..."/>
                                    <field name="teacher_notes" string="Notes enseignant"
                                           placeholder="Notes enseignant..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view attendance lines -->
        <record id="view_attendance_line_search" model="ir.ui.view">
            <field name="name">lms_presence.attendance_line.search</field>
            <field name="model">lms_presence.attendance_line</field>
            <field name="arch" type="xml">
                <search string="Rechercher présences">
                    <field name="participant_name"/>
                    <field name="session_name"/>
                    <field name="channel_id"/>
                    <field name="teacher_id"/>

                    <filter string="Brouillon" name="draft"
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Présents" name="present"
                            domain="[('state', '=', 'present')]"/>
                    <filter string="Absents" name="absent"
                            domain="[('state', '=', 'absent')]"/>
                    <filter string="En retard" name="late"
                            domain="[('state', '=', 'late')]"/>
                    <filter string="Excusés" name="excused"
                            domain="[('state', '=', 'excused')]"/>

                    <separator/>
                    <filter string="Validé par participant" name="validated_participant"
                            domain="[('validated_by_participant', '=', True)]"/>
                    <filter string="Validé par enseignant" name="validated_teacher"
                            domain="[('validated_by_teacher', '=', True)]"/>
                    <filter string="Non validé" name="not_validated"
                            domain="['|', ('validated_by_participant', '=', False),
                                     ('validated_by_teacher', '=', False)]"/>

                    <separator/>
                    <filter string="Avec handicap" name="with_disability"
                            domain="[('has_disability', '=', True)]"/>

                    <group expand="0" string="Grouper par">
                        <filter string="Session" name="group_by_session"
                                context="{'group_by': 'session_id'}"/>
                        <filter string="Participant" name="group_by_participant"
                                context="{'group_by': 'participant_id'}"/>
                        <filter string="État" name="group_by_state"
                                context="{'group_by': 'state'}"/>
                        <filter string="Formation" name="group_by_channel"
                                context="{'group_by': 'channel_id'}"/>
                        <filter string="Enseignant" name="group_by_teacher"
                                context="{'group_by': 'teacher_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_attendance_line" model="ir.actions.act_window">
            <field name="name">Feuilles de présence</field>
            <field name="res_model">lms_presence.attendance_line</field>
            <field name="view_mode">tree,form,calendar,graph,pivot</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_attendance_line_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première feuille de présence
                </p>
                <p>
                    Gérez les présences des participants aux sessions de formation.
                </p>
            </field>
        </record>

        <!-- Vue calendrier optionnelle -->
        <record id="view_attendance_line_calendar" model="ir.ui.view">
            <field name="name">lms_presence.attendance_line.calendar</field>
            <field name="model">lms_presence.attendance_line</field>
            <field name="arch" type="xml">
                <calendar string="Calendrier des présences"
                          date_start="session_date_start"
                          date_stop="session_date_end"
                          color="state">
                    <field name="participant_name"/>
                    <field name="session_name"/>
                    <field name="state"/>
                    <field name="channel_id"/>
                </calendar>
            </field>
        </record>

        <!-- Vue graphique optionnelle -->
        <record id="view_attendance_line_graph" model="ir.ui.view">
            <field name="name">lms_presence.attendance_line.graph</field>
            <field name="model">lms_presence.attendance_line</field>
            <field name="arch" type="xml">
                <graph string="Statistiques des présences"
                       type="bar"
                       stacked="True">
                    <field name="state" type="row"/>
                    <field name="session_id" type="measure"/>
                    <field name="channel_id" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Vue pivot optionnelle -->
        <record id="view_attendance_line_pivot" model="ir.ui.view">
            <field name="name">lms_presence.attendance_line.pivot</field>
            <field name="model">lms_presence.attendance_line</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des présences">
                    <field name="state" type="col"/>
                    <field name="channel_id" type="row"/>
                    <field name="session_id" type="measure"/>
                    <field name="participant_id" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>