<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view for session logs -->
        <record id="view_session_log_tree" model="ir.ui.view">
            <field name="name">lms_presence.session_log.tree</field>
            <field name="model">lms_presence.session_log</field>
            <field name="arch" type="xml">
                <tree string="Journaux des sessions">
                    <field name="create_date"/>
                    <field name="session_id" widget="many2one_clickable"/>
                    <field name="action_type" widget="badge"
                           decoration-info="action_type in ['create', 'write']"
                           decoration-warning="action_type == 'state_change'"
                           decoration-success="action_type == 'notification'"
                           decoration-muted="action_type == 'regenerate'"/>
                    <field name="description"/>
                    <field name="user_id"/>
                    <field name="log_category" invisible="1"/>
                    <field name="participant_id" widget="many2one_clickable"/>
                    <field name="email_message_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Form view for session logs -->
        <record id="view_session_log_form" model="ir.ui.view">
            <field name="name">lms_presence.session_log.form</field>
            <field name="model">lms_presence.session_log</field>
            <field name="arch" type="xml">
                <form string="Journal de session">
                    <header>
                        <field name="log_category" widget="badge"
                               decoration-info="log_category == 'session'"
                               decoration-warning="log_category == 'attendance'"
                               decoration-success="log_category == 'notification'"
                               decoration-danger="log_category == 'inactivity'"
                               decoration-muted="log_category == 'system'"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="session_id" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="action_type" readonly="1"/>
                            </h2>
                        </div>

                        <group>
                            <group string="Informations">
                                <field name="create_date" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="log_category" readonly="1"/>
                            </group>
                            <group string="Détails">
                                <field name="participant_id" readonly="1"/>
                                <field name="email_message_id" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" readonly="1" nolabel="1"/>
                            </page>

                            <page string="Session liée" name="session_details">
                                <field name="session_id" readonly="1" mode="form">
                                    <form readonly="1">
                                        <group>
                                            <group string="Session">
                                                <field name="name"/>
                                                <field name="channel_id"/>
                                                <field name="teacher_id"/>
                                                <field name="date_start"/>
                                            </group>
                                            <group string="Statut">
                                                <field name="state"/>
                                                <field name="total_attendees"/>
                                                <field name="attendance_rate"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <page string="Participant" name="participant_details"
                                  invisible="not participant_id">
                                <field name="participant_id" readonly="1" mode="form">
                                    <form readonly="1">
                                        <group>
                                            <group string="Participant">
                                                <field name="name"/>
                                                <field name="email"/>
                                                <field name="phone"/>
                                                <field name="is_training_participant"/>
                                            </group>
                                            <group string="Handicap">
                                                <field name="has_disability"/>
                                                <field name="disability_type"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" invisible="1"/>
                        <field name="activity_ids" invisible="1"/>
                        <field name="message_ids" invisible="1"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view for session logs -->
        <record id="view_session_log_search" model="ir.ui.view">
            <field name="name">lms_presence.session_log.search</field>
            <field name="model">lms_presence.session_log</field>
            <field name="arch" type="xml">
                <search string="Rechercher journaux">
                    <field name="session_id"/>
                    <field name="action_type"/>
                    <field name="user_id"/>
                    <field name="participant_id"/>
                    <field name="description"/>

                    <filter string="Aujourd'hui" name="today"
                            domain="[('create_date', '>=', context_today())]"/>
                    <filter string="Cette semaine" name="this_week"
                            domain="[('create_date', '>=', context_today().strftime('%Y-%m-01'))]"/>
                    <filter string="Ce mois" name="this_month"
                            domain="[('create_date', '>=', context_today().strftime('%Y-%m-01'))]"/>

                    <separator/>
                    <filter string="Créations" name="create"
                            domain="[('action_type', '=', 'create')]"/>
                    <filter string="Modifications" name="write"
                            domain="[('action_type', '=', 'write')]"/>
                    <filter string="Changements de statut" name="state_change"
                            domain="[('action_type', '=', 'state_change')]"/>
                    <filter string="Notifications" name="notification"
                            domain="[('action_type', '=', 'notification')]"/>
                    <filter string="Détections d'absence" name="absence_detection"
                            domain="[('action_type', '=', 'absence_detection')]"/>

                    <separator/>
                    <filter string="Par session" name="group_by_session"
                            context="{'group_by': 'session_id'}"/>
                    <filter string="Par utilisateur" name="group_by_user"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Par catégorie" name="group_by_category"
                            context="{'group_by': 'log_category'}"/>
                </search>
            </field>
        </record>

        <!-- ACTION POUR LE MENU -->
        <record id="action_session_log" model="ir.actions.act_window">
            <field name="name">Journaux des sessions</field>
            <field name="res_model">lms_presence.session_log</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_session_log_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun journal de session trouvé
                </p>
                <p>
                    Les journaux enregistrent toutes les actions effectuées sur les sessions.
                </p>
            </field>
        </record>

        <!-- Graph view (optionnelle) -->
        <record id="view_session_log_graph" model="ir.ui.view">
            <field name="name">lms_presence.session_log.graph</field>
            <field name="model">lms_presence.session_log</field>
            <field name="arch" type="xml">
                <graph string="Activités par type"
                       type="bar"
                       stacked="True">
                    <field name="action_type" type="row"/>
                    <field name="id" type="measure"/>
                    <field name="log_category" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Pivot view (optionnelle) -->
        <record id="view_session_log_pivot" model="ir.ui.view">
            <field name="name">lms_presence.session_log.pivot</field>
            <field name="model">lms_presence.session_log</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des journaux">
                    <field name="log_category" type="col"/>
                    <field name="action_type" type="row"/>
                    <field name="user_id" type="measure"/>
                    <field name="create_date" type="measure" interval="month"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>