<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="cron_schedule_cold_assessments" model="ir.cron">
            <field name="name">Planification auto évaluations à froid</field>
            <field name="model_id" ref="model_lms_evaluation_results_cold_assessment"/>
            <field name="state">code</field>
            <field name="code">model._cron_schedule_cold_assessments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">5</field>
        </record>

        <!-- ========================================== -->
        <!-- CRON : Envoi automatique                  -->
        <!-- ========================================== -->
        <record id="cron_send_cold_assessments" model="ir.cron">
            <field name="name">Envoi auto évaluations à froid</field>
            <field name="model_id" ref="model_lms_evaluation_results_cold_assessment"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_cold_assessments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">10</field>
        </record>

        <!-- ========================================== -->
        <!-- CRON : Rappels                            -->
        <!-- ========================================== -->
        <record id="cron_send_cold_reminders" model="ir.cron">
            <field name="name">Rappels évaluations à froid</field>
            <field name="model_id" ref="model_lms_evaluation_results_cold_assessment"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">15</field>
        </record>

        <!-- ========================================== -->
        <!-- CRON : Vérification expirations           -->
        <!-- ========================================== -->
        <record id="cron_check_expired_assessments" model="ir.cron">
            <field name="name">Vérification évaluations expirées</field>
            <field name="model_id" ref="model_lms_evaluation_results_cold_assessment"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expired()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">20</field>
        </record>

</odoo>