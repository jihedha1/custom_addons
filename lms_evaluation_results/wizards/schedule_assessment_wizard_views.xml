<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue wizard planification -->
        <record id="view_schedule_assessment_wizard_form" model="ir.ui.view">
            <field name="name">schedule.assessment.wizard.form</field>
            <field name="model">lms_eval.sched_wizard</field>
            <field name="arch" type="xml">
                <form string="Planifier les évaluations">
                    <sheet>
                        <group>
                            <group string="Formations">
                                <field name="ch_ids" widget="many2many_tags" string="Formations" required="1"/>
                            </group>

                            <group string="Participants">
                                <field name="partner_ids" widget="many2many_tags"/>
                                <!-- CORRECTION : Ajoutez class="o_form_label" -->
                                <div class="o_form_label" style="margin-top: 10px; font-size: 12px; color: #666;">
                                    Si vide : tous les participants ayant terminé la formation
                                </div>
                            </group>
                        </group>

                        <group string="Types d'évaluation">
                            <group>
                                <field name="create_j30"/>
                                <field name="survey_30_id" invisible="not create_j30"/>
                            </group>
                            <group>
                                <field name="create_j90"/>
                                <field name="survey_90_id" invisible="not create_j90"/>
                            </group>
                        </group>

                        <group string="Configuration des rappels">
                            <group>
                                <field name="max_reminders"/>
                                <field name="reminder_interval_days"/>
                            </group>
                        </group>

                        <footer>
                            <button name="action_schedule_assessments" string="Planifier" type="object" class="btn-primary"/>
                            <button string="Annuler" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_schedule_assessment_wizard" model="ir.actions.act_window">
            <field name="name">Planifier les évaluations</field>
            <field name="res_model">lms_eval.sched_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Planifier les évaluations à froid
                </p>
            </field>
        </record>

    </data>
</odoo>