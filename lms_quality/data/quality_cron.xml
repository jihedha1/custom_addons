<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- CRON: Vérification des non-conformités en retard -->
        <record id="cron_check_overdue_nc" model="ir.cron">
            <field name="name">Vérification non-conformités en retard</field>
            <field name="model_id" ref="model_quality_non_conformity"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_overdue_nc()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- CRON: Rappels actions correctives -->
        <record id="cron_remind_corrective_actions" model="ir.cron">
            <field name="name">Rappels actions correctives</field>
            <field name="model_id" ref="model_quality_corrective_action"/>
            <field name="state">code</field>
            <field name="code">model._cron_remind_corrective_actions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>