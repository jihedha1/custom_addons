<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ✅ CORRIGÉ : Extension res.partner au lieu de trainer_profile -->

        <!-- Formateur de démonstration -->
        <record id="demo_trainer_1" model="res.partner">
            <field name="name">Jean Dupont - Formateur Demo</field>
            <field name="email">jean.dupont@demo.com</field>
            <field name="is_trainer" eval="True"/>
            <field name="trainer_type">external</field>
            <field name="hourly_rate">65.00</field>
            <field name="availability_status">available</field>
            <field name="trainer_state">active</field>
            <field name="competency_ids" eval="[(6, 0, [ref('lms_public_info.demo_competency_technical')])]"/>
        </record>

        <!-- Salle de démonstration -->
        <record id="demo_resource_1" model="lms_resources_trainers.resource_management">
            <field name="name">Salle de formation A</field>
            <field name="code">SALA-001</field>
            <field name="resource_type_id" ref="resource_type_classroom"/>
            <field name="capacity">20</field>
            <field name="location">Étage 1, Bureau 101</field>
            <field name="available_for_booking" eval="True"/>
            <field name="state">available</field>
        </record>

        <!-- Évaluation de support de démonstration -->
        <record id="demo_material_evaluation_1" model="lms_resources_trainers.material_evaluation">
            <field name="material_name">Support Python avancé</field>
            <field name="material_type">presentation</field>
            <field name="evaluator_id" ref="base.user_admin"/>
            <field name="deadline_date" eval="(DateTime.today() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="state">in_progress</field>
        </record>
    </data>
</odoo>