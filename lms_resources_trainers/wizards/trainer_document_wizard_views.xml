<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire du wizard -->
        <record id="view_trainer_document_wizard_form" model="ir.ui.view">
            <field name="name">trainer.document.wizard.form</field>
            <field name="model">lms_resources_trainers.trainer_document_wizard</field>
            <field name="arch" type="xml">
                <form string="Ajouter un document">
                    <sheet>
                        <group>
                            <group string="Formateur">
                                <field name="trainer_id" widget="many2one" readonly="1"/>
                                <div class="row">
                                    <label class="col-3">Statut:</label>
                                    <span class="col-9">
                                        <field name="trainer_id.state" readonly="1" nolabel="1" widget="badge"/>
                                    </span>
                                </div>
                            </group>
                            <group string="Document">
                                <field name="document_type_id" widget="many2one" required="1"/>
                                <field name="name" required="1"/>
                            </group>
                        </group>

                        <group string="Fichier">
                            <field name="attachment" filename="attachment_filename" required="1"/>
                            <field name="attachment_filename" invisible="1"/>
                        </group>

                        <group string="Dates">
                            <field name="issue_date"/>
                            <field name="expiry_date" attrs="{'required': [('document_type_id.has_expiry_date','=',True)]}"/>
                        </group>

                        <group string="Notes">
                            <field name="notes" widget="text" nolabel="1" placeholder="Notes additionnelles..."/>
                        </group>

                        <footer>
                            <button name="action_add_document" string="Ajouter" type="object" class="btn-primary"/>
                            <button string="Annuler" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_open_trainer_document_wizard" model="ir.actions.act_window">
            <field name="name">Ajouter un document</field>
            <field name="res_model">lms_resources_trainers.trainer_document_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="lms_resources_trainers.model_lms_resources_trainers_trainer_profile"/>
            <field name="binding_type">action</field>
        </record>
    </data>
</odoo>