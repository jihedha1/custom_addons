<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Groupes de sécurité -->
        <record id="group_lms_resources_manager" model="res.groups">
            <field name="name">Responsable Ressources</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_lms_trainer_manager" model="res.groups">
            <field name="name">Responsable Formateurs</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- ✅ AJOUT : Règles pour trainer_document -->
        <record id="trainer_document_rule_user" model="ir.rule">
            <field name="name">Documents formateur - Utilisateur</field>
            <field name="model_id" ref="model_lms_resources_trainers_trainer_document"/>
            <field name="domain_force">[('trainer_id.company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ✅ AJOUT : Règles pour trainer_availability -->
        <record id="trainer_availability_rule_user" model="ir.rule">
            <field name="name">Disponibilités formateur - Utilisateur</field>
            <field name="model_id" ref="model_lms_resources_trainers_trainer_availability"/>
            <field name="domain_force">[('trainer_id.company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Règles existantes -->
        <record id="resource_management_rule_user" model="ir.rule">
            <field name="name">Ressources - Utilisateur</field>
            <field name="model_id" ref="model_lms_resources_trainers_resource_management"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="resource_booking_rule_user" model="ir.rule">
            <field name="name">Réservations - Utilisateur</field>
            <field name="model_id" ref="model_lms_resources_trainers_resource_booking"/>
            <field name="domain_force">
                ['|', ('company_id', '=', user.company_id.id), ('requester_id', '=', user.partner_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="material_evaluation_rule_user" model="ir.rule">
            <field name="name">Évaluations supports - Utilisateur</field>
            <field name="model_id" ref="model_lms_resources_trainers_material_evaluation"/>
            <field name="domain_force">
                ['|', ('company_id', '=', user.company_id.id), ('evaluator_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>