<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kpi_rejection_wizard_form" model="ir.ui.view">
            <field name="name">kpi.rejection.wizard.form</field>
            <field name="model">kpi.rejection.wizard</field>
            <field name="arch" type="xml">
                <form string="Rejeter le snapshot">
                    <sheet>
                        <div class="alert alert-warning" role="alert">
                            <strong>⚠️ Attention :</strong>
                            Cette action renverra le snapshot en brouillon.
                        </div>

                        <group>
                            <field name="snapshot_id" readonly="1"/>
                            <field name="reason"/>
                            <field name="notify_creator"/>
                        </group>

                        <group>
                            <field name="notes" placeholder="Expliquez les raisons du rejet et les corrections à apporter..." nolabel="1"/>
                        </group>
                    </sheet>

                    <footer>
                        <button name="action_reject" string="Rejeter" type="object" class="btn-danger"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>