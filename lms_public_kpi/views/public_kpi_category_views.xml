<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Tree pour les catégories -->
        <record id="view_public_kpi_category_tree" model="ir.ui.view">
            <field name="name">public.kpi.category.tree</field>
            <field name="model">public.kpi.category</field>
            <field name="arch" type="xml">
                <tree string="Catégories KPI">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="kpi_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire pour les catégories - VERSION SIMPLIFIÉE -->
        <record id="view_public_kpi_category_form" model="ir.ui.view">
            <field name="name">public.kpi.category.form</field>
            <field name="model">public.kpi.category</field>
            <field name="arch" type="xml">
                <form string="Catégorie KPI">
                    <sheet>
                        <!-- Version sans bouton problématique -->
                        <div class="oe_button_box" name="button_box">
                            <!-- Simple affichage du compte sans action -->
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="kpi_count" readonly="1" nolabel="1"/>
                                </span>
                                <span class="o_stat_text">Indicateurs</span>
                            </div>
                        </div>

                        <!-- Odoo 17 : invisible="condition" -->
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="active"/>

                        <div class="oe_title">
                            <label for="name" string="Nom de la catégorie"/>
                            <h1>
                                <field name="name" placeholder="ex: Satisfaction"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Description de la catégorie..."/>
                            </page>

                            <page string="Indicateurs" name="kpis">
                                <field name="kpi_version_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="snapshot_id"/>
                                        <field name="value"/>
                                        <field name="unit"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Recherche pour les catégories -->
        <record id="view_public_kpi_category_search" model="ir.ui.view">
            <field name="name">public.kpi.category.search</field>
            <field name="model">public.kpi.category</field>
            <field name="arch" type="xml">
                <search string="Rechercher catégories">
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactives" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Action pour les catégories -->
        <record id="action_public_kpi_category" model="ir.actions.act_window">
            <field name="name">Catégories d'indicateurs</field>
            <field name="res_model">public.kpi.category</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>