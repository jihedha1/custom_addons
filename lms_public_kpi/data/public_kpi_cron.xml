<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- CRON: Vérification des mises à jour à venir -->
        <record id="cron_check_kpi_updates" model="ir.cron">
            <field name="name">Vérification mises à jour KPI</field>
            <field name="model_id" ref="model_public_kpi_snapshot"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_upcoming_updates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- CRON: Calcul automatique des KPI -->
        <record id="cron_auto_calculate_kpis" model="ir.cron">
            <field name="name">Calcul automatique des KPI</field>
            <field name="model_id" ref="model_public_kpi_version"/>
            <field name="state">code</field>
            <field name="code">model.action_calculate()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>