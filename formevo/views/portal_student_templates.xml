<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="portal_my_courses_template" name="Mes Cours - Portail">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Mes Cours</t>
                </t>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="mb-4">Mes Cours</h1>

                            <t t-if="courses_data">
                                <div class="row">
                                    <t t-foreach="courses_data" t-as="course_data">
                                        <div class="col-md-6 col-lg-4 mb-4">
                                            <div class="card h-100 shadow-sm">
                                                <t t-if="course_data['channel'].image_1920">
                                                    <img t-att-src="'/web/image/slide.channel/' + str(course_data['channel'].id) + '/image_1920'"
                                                         class="card-img-top"
                                                         alt=""
                                                         style="height: 200px; object-fit: cover;"/>
                                                </t>
                                                <t t-else="">
                                                    <div class="card-img-top bg-primary"
                                                         style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fa fa-graduation-cap fa-5x text-white opacity-50"></i>
                                                    </div>
                                                </t>

                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <t t-esc="course_data['channel'].name"/>
                                                    </h5>

                                                    <t t-if="course_data['progress']">
                                                        <div class="mb-3">
                                                            <div class="d-flex justify-content-between mb-1">
                                                                <span class="text-muted small">Progression</span>
                                                                <span class="font-weight-bold">
                                                                    <t t-esc="'%.0f' % course_data['progress'].completion_percentage"/>%
                                                                </span>
                                                            </div>
                                                            <div class="progress">
                                                                <div class="progress-bar bg-success"
                                                                     role="progressbar"
                                                                     t-att-style="'width: ' + str(course_data['progress'].completion_percentage) + '%'">
                                                                </div>
                                                            </div>

                                                            <div class="mt-2 small text-muted">
                                                                <i class="fa fa-check-circle"></i>
                                                                <t t-esc="course_data['progress'].completed_slides"/>
                                                                /
                                                                <t t-esc="course_data['progress'].total_slides"/>
                                                                contenus complétés
                                                            </div>

                                                            <div class="small text-muted">
                                                                <i class="fa fa-clock-o"></i>
                                                                Temps passé :
                                                                <t t-esc="course_data['progress'].formatted_time_spent"/>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </div>

                                                <div class="card-footer bg-transparent">
                                                    <a t-attf-href="/my/course/#{course_data['channel'].id}"
                                                       class="btn btn-primary btn-block">
                                                        <i class="fa fa-play-circle"></i>
                                                        Continuer le cours
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>

                            <t t-else="">
                                <div class="alert alert-info text-center mt-5">
                                    <i class="fa fa-info-circle fa-3x mb-3"></i>
                                    <h4>Aucun cours assigné</h4>
                                    <p>Vous n'êtes actuellement inscrit à aucun cours.</p>
                                    <a href="/formations/catalogue" class="btn btn-primary mt-3">
                                        <i class="fa fa-book"></i>
                                        Découvrir le catalogue
                                    </a>
                                </div>
                            </t>

                        </div>
                    </div>
                </div>

            </t>
        </template>

        <!-- Template : Détail d'un Cours (Portail Apprenant) -->
        <template id="portal_course_detail_template" name="Détail Cours - Portail">
            <t t-call="portal.portal_layout">
                <t t-set="title" t-value="channel.name"/>

                <div class="container mt-4 mb-5">
                    <!-- En-tête du cours -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="/my/courses">
                                            <i class="fa fa-arrow-left"></i>
                                            Mes Cours
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item active" aria-current="page">
                                        <t t-esc="channel.name"/>
                                    </li>
                                </ol>
                            </nav>

                            <h1 class="mb-3">
                                <t t-esc="channel.name"/>
                            </h1>

                            <t t-if="progress">
                                <div class="card shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Votre progression</h5>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="progress" style="height: 30px;">
                                                    <div class="progress-bar bg-success"
                                                         role="progressbar"
                                                         t-att-style="'width: ' + str(progress.completion_percentage) + '%'">
                                                        <t t-esc="'%.0f' % progress.completion_percentage"/>%
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-right">
                                                <div>
                                                    <strong>
                                                        <t t-esc="progress.completed_slides"/>
                                                        /
                                                        <t t-esc="progress.total_slides"/>
                                                    </strong>
                                                    contenus
                                                </div>
                                                <div class="text-muted small">
                                                    Temps total :
                                                    <t t-esc="progress.formatted_time_spent"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>

                    <!-- Liste des contenus -->
                    <div class="row">
                        <div class="col-12">
                            <h3 class="mb-3">Contenus du cours</h3>

                            <t t-if="slides_data">
                                <div class="list-group">
                                    <t t-foreach="slides_data" t-as="slide_data">
                                        <a t-attf-href="/my/course/#{channel.id}/slide/#{slide_data['slide'].id}"
                                           class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between align-items-center">
                                                <div>
                                                    <h5 class="mb-1">
                                                        <t t-if="slide_data['completed']">
                                                            <i class="fa fa-check-circle text-success"></i>
                                                        </t>
                                                        <t t-else="">
                                                            <i class="fa fa-circle-o text-muted"></i>
                                                        </t>
                                                        <t t-esc="slide_data['slide'].name"/>
                                                    </h5>
                                                    <p class="mb-1 text-muted small">
                                                        <t t-if="slide_data['slide'].slide_type == 'video'">
                                                            <i class="fa fa-video-camera"></i>
                                                            Vidéo
                                                        </t>
                                                        <t t-elif="slide_data['slide'].slide_type == 'document'">
                                                            <i class="fa fa-file-pdf-o"></i>
                                                            Document
                                                        </t>
                                                        <t t-elif="slide_data['slide'].slide_type == 'quiz'">
                                                            <i class="fa fa-question-circle"></i>
                                                            Quiz
                                                        </t>
                                                        <t t-else="">
                                                            <i class="fa fa-file-text-o"></i>
                                                            Contenu
                                                        </t>
                                                    </p>
                                                </div>
                                                <div class="text-right">
                                                    <t t-if="slide_data['completed']">
                                                        <span class="badge badge-success">Terminé</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="badge badge-secondary">À faire</span>
                                                    </t>
                                                    <t t-if="slide_data['time_spent'] > 0">
                                                        <div class="small text-muted mt-1">
                                                            <i class="fa fa-clock-o"></i>
                                                            <t t-esc="'%d min' % (slide_data['time_spent'] // 60)"/>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </a>
                                    </t>
                                </div>
                            </t>

                            <t t-else="">
                                <div class="alert alert-warning">
                                    Ce cours ne contient pas encore de contenu.
                                </div>
                            </t>

                        </div>
                    </div>
                </div>

            </t>
        </template>

        <!-- Menu dans le portail -->
        <template id="portal_my_home_menu_courses" name="Portal My Home Menu - Courses"
                  inherit_id="portal.portal_my_home" priority="30">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Mes Cours</t>
                    <t t-set="url" t-value="'/my/courses'"/>
                    <t t-set="placeholder_count" t-value="'course_count'"/>
                </t>
            </xpath>
        </template>

    </data>
</odoo>