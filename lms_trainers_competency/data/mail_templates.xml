<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Template pour renouvellement de compétence -->
        <record id="mail_template_competency_renewal_due" model="mail.template">
            <field name="name">Renouvellement de compétence dû</field>
            <field name="model_id" ref="model_lms_trainers_competency_competency_renewal"/>
            <field name="email_from">${object.company_id.email or 'formation@example.com'}</field>
            <field name="email_to">${object.trainer_id.email}</field>
            <field name="subject">Renouvellement de compétence requis: ${object.competency_id.name}</field>
            <field name="body_html"><![CDATA[
                <p>Bonjour ${object.trainer_id.name},</p>

                <p>Votre compétence <strong>${object.competency_id.name}</strong> nécessite un renouvellement.</p>

                <p><strong>Détails:</strong></p>
                <ul>
                    <li>Date d'expiration: ${object.renewal_date}</li>
                    <li>Type: ${object.competency_id.competency_type_id.name}</li>
                    <li>Responsable: ${object.responsible_id.name}</li>
                </ul>

                <p>Veuillez planifier votre mise à jour dès que possible.</p>

                <p>Cordialement,<br/>
                L'équipe qualité</p>
            ]]></field>
        </record>

        <!-- Template pour formation de formateur planifiée -->
        <record id="mail_template_trainer_training_scheduled" model="mail.template">
            <field name="name">Formation de formateur planifiée</field>
            <field name="model_id" ref="model_lms_trainers_competency_trainer_training"/>
            <field name="email_from">${object.company_id.email or 'formation@example.com'}</field>
            <field name="email_to">${object.trainer_id.email}</field>
            <field name="subject">Formation planifiée: ${object.name}</field>
            <field name="body_html"><![CDATA[
                <p>Bonjour ${object.trainer_id.name},</p>

                <p>Une formation a été planifiée pour vous.</p>

                <p><strong>Détails:</strong></p>
                <ul>
                    <li>Formation: ${object.name}</li>
                    <li>Date: ${object.start_date} au ${object.end_date}</li>
                    <li>Type: ${object.training_type_id.name}</li>
                    <li>Organisme: ${object.organizer}</li>
                </ul>

                <p>Cordialement,<br/>
                L'équipe formation</p>
            ]]></field>
        </record>
    </data>
</odoo>