<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue arbre pour les formations de formateurs -->
        <record id="view_trainer_training_tree" model="ir.ui.view">
            <field name="name">lms_trainers_competency.trainer_training.tree</field>
            <field name="model">lms_trainers_competency.trainer_training</field>
            <field name="arch" type="xml">
                <tree string="Formations de formateurs">
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="training_type_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration_days"/>
                    <field name="organizer"/>
                    <field name="state" widget="badge"
                           decoration-success="state=='completed'"
                           decoration-warning="state=='in_progress'"/>
                    <field name="cost"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire pour les formations de formateurs -->
        <record id="view_trainer_training_form" model="ir.ui.view">
            <field name="name">lms_trainers_competency.trainer_training.form</field>
            <field name="model">lms_trainers_competency.trainer_training</field>
            <field name="arch" type="xml">
                <form string="Formation de Formateur">
                    <header>
                        <button name="action_plan" string="Planifier" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="action_start" string="Démarrer" type="object" class="oe_highlight"
                                states="planned"/>
                        <button name="action_complete" string="Terminer" type="object" class="oe_highlight"
                                states="in_progress"/>
                        <button name="action_cancel" string="Annuler" type="object"
                                states="draft,planned,in_progress"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,planned,in_progress,completed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la formation"/>
                            </h1>
                        </div>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_trainer"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-user">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Formateur</span>
                                    <span class="o_stat_value">
                                        <field name="trainer_id.name" readonly="1"/>
                                    </span>
                                </div>
                            </button>
                            <div class="oe_stat_button" icon="fa-euro">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Coût</span>
                                    <span class="o_stat_value">
                                        <field name="cost" widget="monetary" options="{'currency_field': 'company_currency_id'}" nolabel="1"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group string="Formation">
                                <field name="trainer_id" widget="many2one" options="{'no_create': True}"/>
                                <field name="training_type_id" widget="many2one"/>
                                <field name="organizer"/>
                                <field name="location"/>
                            </group>
                            <group string="Dates">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_days" readonly="1"/>
                                <field name="completion_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Financement">
                                <group>
                                    <group>
                                        <field name="cost"/>
                                        <field name="funded_by" widget="radio" options="{'horizontal': true}"/>
                                    </group>
                                    <group>
                                        <field name="certificate_obtained" string="Certificat obtenu"/>
                                        <field name="certificate_document" widget="binary" filename="certificate_document.datas_fname"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Contenu">
                                <field name="objectives" widget="text" nolabel="1" placeholder="Objectifs de la formation..."/>
                                <field name="content" widget="html" nolabel="1"/>
                                <field name="skills_developed" widget="text" nolabel="1" placeholder="Compétences développées..."/>
                            </page>
                            <page string="Évaluation">
                                <field name="evaluation_score"/>
                                <field name="feedback" widget="text" nolabel="1" placeholder="Retour du formateur..."/>
                            </page>
                            <page string="Supports">
                                <field name="training_materials" widget="many2many" colspan="4"/>
                                <field name="notes" widget="text" nolabel="1" placeholder="Notes additionnelles..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue recherche -->
        <record id="view_trainer_training_search" model="ir.ui.view">
            <field name="name">lms_trainers_competency.trainer_training.search</field>
            <field name="model">lms_trainers_competency.trainer_training</field>
            <field name="arch" type="xml">
                <search string="Rechercher formation">
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="training_type_id"/>
                    <field name="organizer"/>
                    <filter name="current" string="En cours" domain="[('state','=','in_progress')]"/>
                    <filter name="planned" string="Planifiées" domain="[('state','=','planned')]"/>
                    <filter name="completed" string="Terminées" domain="[('state','=','completed')]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter name="group_by_trainer" string="Formateur" context="{'group_by': 'trainer_id'}"/>
                        <filter name="group_by_type" string="Type" context="{'group_by': 'training_type_id'}"/>
                        <filter name="group_by_year" string="Année" context="{'group_by': 'start_date:year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les formations de formateurs -->
        <record id="action_trainer_training" model="ir.actions.act_window">
            <field name="name">Formations de formateurs</field>
            <field name="res_model">lms_trainers_competency.trainer_training</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_trainer_training_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Suivez ici les formations suivies par les formateurs pour maintenir et développer leurs compétences.
                </p>
            </field>
        </record>
    </data>
</odoo>