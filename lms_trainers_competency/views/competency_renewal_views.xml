<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue arbre pour les renouvellements -->
        <record id="view_competency_renewal_tree" model="ir.ui.view">
            <field name="name">lms_trainers_competency.competency_renewal.tree</field>
            <field name="model">lms_trainers_competency.competency_renewal</field>
            <field name="arch" type="xml">
                <tree string="Renouvellements de compétences">
                    <field name="name"/>
                    <field name="competency_id"/>
                    <field name="trainer_id"/>
                    <field name="renewal_date"/>
                    <field name="days_until_renewal" widget="progressbar"
                           options="{'max_value': '365', 'editable': false, 'colors': 'red:value<0;orange:value<30;green:value>=30'}"/>
                    <field name="state" widget="badge"
                           decoration-danger="state=='overdue'"
                           decoration-warning="state=='in_progress'"
                           decoration-success="state=='completed'"/>
                    <field name="responsible_id"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire pour les renouvellements -->
        <record id="view_competency_renewal_form" model="ir.ui.view">
            <field name="name">lms_trainers_competency.competency_renewal.form</field>
            <field name="model">lms_trainers_competency.competency_renewal</field>
            <field name="arch" type="xml">
                <form string="Renouvellement de Compétence">
                    <header>
                        <button name="action_plan" string="Planifier" type="object" class="oe_highlight"
                                states="draft"/>
                        <button name="action_start" string="Démarrer" type="object" class="oe_highlight"
                                states="planned"/>
                        <button name="action_complete" string="Terminer" type="object" class="oe_highlight"
                                states="in_progress"/>
                        <button name="action_cancel" string="Annuler" type="object"
                                states="draft,planned,in_progress"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,planned,in_progress,completed,cancelled,overdue"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Référence du renouvellement"/>
                            </h1>
                        </div>
                        <div class="oe_button_box" name="button_box">
                            <div class="oe_stat_button" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Jours restants</span>
                                    <span class="o_stat_value">
                                        <field name="days_until_renewal" widget="integer" nolabel="1"/>
                                    </span>
                                </div>
                            </div>
                            <button name="action_view_trainer"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-user">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Formateur</span>
                                    <span class="o_stat_value">
                                        <field name="trainer_id.name" readonly="1"/>
                                    </span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group string="Compétence">
                                <field name="competency_id" widget="many2one" options="{'no_create': True}"/>
                                <field name="trainer_id" widget="many2one" options="{'no_create': True}"/>
                                <field name="renewal_date"/>
                                <field name="creation_date" readonly="1"/>
                                <field name="completion_date" readonly="1"/>
                            </group>
                            <group string="Responsable">
                                <field name="responsible_id" widget="many2one"/>
                                <field name="evaluation_method"/>
                                <field name="result"/>
                                <field name="score"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Évaluation">
                                <field name="evaluation_details" widget="text" nolabel="1" placeholder="Détails de la méthode d'évaluation..."/>
                            </page>
                            <page string="Justificatifs">
                                <field name="proof_document" widget="binary" filename="proof_document.datas_fname"/>
                                <field name="notes" widget="text" nolabel="1" placeholder="Notes additionnelles..."/>
                            </page>
                            <page string="Historique">
                                <field name="message_ids" widget="mail_thread"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue recherche -->
        <record id="view_competency_renewal_search" model="ir.ui.view">
            <field name="name">lms_trainers_competency.competency_renewal.search</field>
            <field name="model">lms_trainers_competency.competency_renewal</field>
            <field name="arch" type="xml">
                <search string="Rechercher renouvellement">
                    <field name="name"/>
                    <field name="competency_id"/>
                    <field name="trainer_id"/>
                    <field name="responsible_id"/>
                    <filter name="overdue" string="En retard" domain="[('state','=','overdue')]"/>
                    <filter name="upcoming" string="À venir (30j)" domain="[('days_until_renewal','&lt;=',30),('days_until_renewal','&gt;',0)]"/>
                    <filter name="planned" string="Planifiés" domain="[('state','=','planned')]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter name="group_by_trainer" string="Formateur" context="{'group_by': 'trainer_id'}"/>
                        <filter name="group_by_competency" string="Compétence" context="{'group_by': 'competency_id'}"/>
                        <filter name="group_by_state" string="Statut" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les renouvellements -->
        <record id="action_competency_renewal" model="ir.actions.act_window">
            <field name="name">Renouvellements de compétences</field>
            <field name="res_model">lms_trainers_competency.competency_renewal</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_competency_renewal_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Planifiez et suivez ici les renouvellements de compétences des formateurs.
                </p>
            </field>
        </record>
    </data>
</odoo>