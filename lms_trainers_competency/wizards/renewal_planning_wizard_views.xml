<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire du wizard -->
        <record id="view_renewal_planning_wizard_form" model="ir.ui.view">
            <field name="name">renewal.planning.wizard.form</field>
            <field name="model">lms_trainers_competency.renewal_planning_wizard</field>
            <field name="arch" type="xml">
                <form string="Planifier des renouvellements">
                    <sheet>
                        <div class="alert alert-info" role="alert">
                            <strong>Info:</strong> Cet assistant planifie des renouvellements de compétences pour les formateurs sélectionnés.
                        </div>

                        <group>
                            <group string="Sélection">
                                <field name="trainer_ids" widget="many2many_tags" required="1"/>
                                <field name="competency_ids" widget="many2many_tags" required="1"/>
                            </group>
                            <group string="Planification">
                                <field name="planning_period" widget="radio" required="1"/>
                                <field name="start_date" required="1"/>
                                <field name="evaluation_method"/>
                                <field name="responsible_id" widget="many2one"/>
                            </group>
                        </group>

                        <group string="Options">
                            <field name="create_activities" string="Créer des activités dans le calendrier"/>
                            <field name="send_notifications" string="Envoyer des notifications aux formateurs"/>
                        </group>

                        <footer>
                            <button name="action_plan_renewals" string="Planifier" type="object" class="btn-primary"/>
                            <button string="Annuler" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_renewal_planning_wizard" model="ir.actions.act_window">
            <field name="name">Planifier des renouvellements</field>
            <field name="res_model">lms_trainers_competency.renewal_planning_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="lms_trainers_competency.model_lms_trainers_competency_competency_renewal"/>
            <field name="binding_type">action</field>
        </record>
    </data>
</odoo>