<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Groupes de sécurité -->
        <record id="group_lms_competency_manager" model="res.groups">
            <field name="name">Responsable Compétences Formateurs</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Règles de sécurité -->
        <record id="competency_renewal_rule_user" model="ir.rule">
            <field name="name">Renouvellement compétence - Utilisateur</field>
            <field name="model_id" ref="model_lms_trainers_competency_competency_renewal"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="trainer_training_rule_user" model="ir.rule">
            <field name="name">Formation formateur - Utilisateur</field>
            <field name="model_id" ref="model_lms_trainers_competency_trainer_training"/>
            <field name="domain_force">
                ['|', ('company_id', '=', user.company_id.id), ('trainer_id', '=', user.partner_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>