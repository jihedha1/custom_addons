<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Séquences -->
        <record id="seq_smart_objective" model="ir.sequence">
            <field name="name">Objectif SMART</field>
            <field name="code">lms_objectives.smart_objective</field>
            <field name="prefix">OBJ-</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_placement_assessment" model="ir.sequence">
            <field name="name">Évaluation positionnement</field>
            <field name="code">lms_objectives.placement_assessment</field>
            <field name="prefix">POS-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_individual_plan" model="ir.sequence">
            <field name="name">Plan individualisé</field>
            <field name="code">lms_objectives.individual_plan</field>
            <field name="prefix">PLAN-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Modèle de plan de formation par défaut -->
        <record id="plan_template_default" model="lms_objectives.plan_template">
            <field name="name">Plan standard</field>
            <field name="plan_type">standard</field>
            <field name="description">Modèle de plan de formation standard</field>
        </record>

        <record id="plan_template_remediation" model="lms_objectives.plan_template">
            <field name="name">Plan de remédiation</field>
            <field name="plan_type">remediation</field>
            <field name="description">Plan pour apprenants ayant besoin de renforcement</field>
        </record>

        <record id="plan_template_accelerated" model="lms_objectives.plan_template">
            <field name="name">Plan accéléré</field>
            <field name="plan_type">accelerated</field>
            <field name="description">Plan pour apprenants de niveau avancé</field>
        </record>

    </data>
</odoo>