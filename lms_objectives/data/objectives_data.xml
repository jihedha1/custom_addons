<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Séquences -->
        <record id="seq_smart_objective" model="ir.sequence">
            <field name="name">Objectif SMART</field>
            <field name="code">formation.smart.objective</field>
            <field name="prefix">OBJ-</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_placement_assessment" model="ir.sequence">
            <field name="name">Évaluation positionnement</field>
            <field name="code">formation.placement.assessment</field>
            <field name="prefix">POS-</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_individual_plan" model="ir.sequence">
            <field name="name">Plan individualisé</field>
            <field name="code">formation.individual.plan</field>
            <field name="prefix">PLAN-</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Modèles de questionnaire de positionnement -->
        <record id="survey_template_placement_technical" model="survey.survey">
            <field name="title">Questionnaire de positionnement - Compétences techniques</field>
            <field name="category">placement</field>
            <field name="description">Évaluez vos compétences techniques avant la formation</field>
            <field name="questions_layout">one_page</field>
            <field name="scoring_type">scoring_without_answers</field>
            <field name="questions_selection">all</field>
            <field name="access_mode">public</field>
            <field name="is_time_limited">False</field>
        </record>

        <!-- Modèle de plan de formation -->
        <record id="plan_template_default" model="formation.plan.template">
            <field name="name">Modèle de plan standard</field>
            <field name="description">Modèle générique pour les plans individualisés</field>
            <field name="content">Contenu du modèle par défaut</field>
        </record>

    </data>
</odoo>