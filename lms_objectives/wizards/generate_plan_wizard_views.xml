<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire du wizard -->
        <record id="view_generate_plan_wizard_form" model="ir.ui.view">
            <field name="name">generate.plan.wizard.form</field>
            <field name="model">lms_objectives.generate_plan_wizard</field>
            <field name="arch" type="xml">
                <form string="Générer un Plan Individualisé">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" widget="many2one" required="1"/>
                                <field name="course_id" widget="many2one" required="1"/>
                                <field name="plan_type" widget="radio" required="1"/>
                            </group>
                            <group>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="template_id" widget="many2one" options="{'no_create': True}"/>
                            </group>
                        </group>

                        <group string="Options">
                            <field name="include_objectives" string="Inclure les objectifs du cours"/>
                            <field name="include_assessment" string="Inclure les résultats du positionnement"/>
                            <field name="auto_sign" string="Générer pour signature électronique"/>
                        </group>

                        <footer>
                            <button name="generate_plan" string="Générer" type="object" class="btn-primary"/>
                            <button string="Annuler" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_generate_plan_wizard" model="ir.actions.act_window">
            <field name="name">Générer un Plan</field>
            <field name="res_model">lms_objectives.generate_plan_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="lms_objectives.model_lms_objectives_individual_plan"/>
            <field name="binding_type">action</field>
        </record>
    </data>
</odoo>