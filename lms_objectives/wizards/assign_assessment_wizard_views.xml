<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Assistant assignation questionnaire -->
        <record id="view_assign_assessment_wizard_form" model="ir.ui.view">
            <field name="name">lms_objectives.assign_assessment_wizard.form</field>
            <field name="model">lms_objectives.assign_assessment_wizard</field>
            <field name="arch" type="xml">
                <form string="Assigner questionnaire positionnement">
                    <header>
                        <button name="action_assign" type="object" string="Assigner" class="btn-primary"/>
                        <button string="Annuler" special="cancel" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Assigner questionnaire de positionnement</h1>
                        </div>

                        <group>
                            <group string="Formation">
                                <field name="channel_id" required="1"/>
                            </group>
                            <group string="Questionnaire">
                                <field name="survey_id" required="1"/>
                            </group>
                        </group>

                        <!-- Version 1 : Ajoutez le champ partner_ids -->
                        <group string="Apprenants">
                            <field name="partner_ids" required="1" nolabel="1"/>
                        </group>

                        <group>
                            <group string="Options">
                                <field name="send_email" string="Envoyer email d'invitation"/>
                                <field name="create_activity" string="Créer activité de rappel"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir l'assistant -->
        <record id="action_assign_assessment_wizard" model="ir.actions.act_window">
            <field name="name">Assigner questionnaire positionnement</field>
            <field name="res_model">lms_objectives.assign_assessment_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_channel_id': active_id}</field>
        </record>

    </data>
</odoo>