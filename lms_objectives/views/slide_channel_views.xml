<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire étendue pour les cours (slide.channel) -->
        <record id="view_slide_channel_form_inherit_objectives" model="ir.ui.view">
            <field name="name">slide.channel.form.inherit.objectives</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.slide_channel_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general']" position="inside">
                    <group name="objectives_group" string="Objectifs SMART">
                        <field name="smart_objective_ids" colspan="4" nolabel="1">
                            <tree string="Objectifs" editable="bottom">
                                <field name="name"/>
                                <field name="sequence" widget="handle"/>
                                <field name="specific"/>
                                <field name="measurable"/>
                                <field name="achievable"/>
                                <field name="relevant"/>
                                <field name="time_bound"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

                <xpath expr="//page[@name='configuration']" position="inside">
                    <group string="Positionnement">
                        <field name="placement_survey_id" widget="many2one" options="{'no_create': True}"/>
                        <field name="auto_assign_placement" string="Assigner auto le positionnement"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Vue liste étendue pour les cours -->
        <record id="view_slide_channel_tree_inherit_objectives" model="ir.ui.view">
            <field name="name">slide.channel.tree.inherit.objectives</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.slide_channel_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="smart_objective_count" string="Objectifs"/>
                    <field name="has_placement_survey" string="Positionnement" widget="boolean_button"/>
                </xpath>
            </field>
        </record>

        <!-- Vue kanban étendue pour les cours -->
        <record id="view_slide_channel_kanban_inherit_objectives" model="ir.ui.view">
            <field name="name">slide.channel.kanban.inherit.objectives</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.slide_channel_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//t[@t-name='slide.channel.kanban.box']" position="attributes">
                    <attribute name="t-inherit">website_slides.slide_channel_kanban_view</attribute>
                    <attribute name="t-inherit-mode">extension</attribute>
                </xpath>
                <xpath expr="//div[hasclass('o_kanban_card_content')]" position="inside">
                    <div class="o_kanban_tags_section">
                        <span class="badge badge-pill bg-primary" t-if="record.smart_objective_count.value">
                            <i class="fa fa-bullseye me-1"/>Objectifs: <t t-esc="record.smart_objective_count.value"/>
                        </span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>