<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Menu principal -->
        <menuitem id="menu_lms_objectives"
                  name="Objectifs Pédagogiques"
                  sequence="10"
                  />

        <!-- Actions d'abord, puis menus qui y font référence -->
        <record id="action_smart_objective" model="ir.actions.act_window">
            <field name="name">Objectifs SMART</field>
            <field name="res_model">lms_objectives.smart_objective</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez vos premiers objectifs pédagogiques SMART.
                </p>
            </field>
        </record>

        <record id="action_placement_assessment" model="ir.actions.act_window">
            <field name="name">Questionnaires de Positionnement</field>
            <field name="res_model">lms_objectives.placement_assessment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_individual_plan" model="ir.actions.act_window">
            <field name="name">Plans Individualisés</field>
            <field name="res_model">lms_objectives.individual_plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Maintenant les menus qui font référence aux actions -->
        <menuitem id="menu_objectives_main"
                  name="Objectifs SMART"
                  parent="menu_lms_objectives"
                  sequence="10"
                  action="action_smart_objective"/>

        <menuitem id="menu_placement_assessments"
                  name="Positionnements"
                  parent="menu_lms_objectives"
                  sequence="20"
                  action="action_placement_assessment"/>

        <menuitem id="menu_individual_plans"
                  name="Plans Individualisés"
                  parent="menu_lms_objectives"
                  sequence="30"
                  action="action_individual_plan"/>
        <menuitem id="menu_plan_template" name="Modèles de plans" parent="lms_objectives.menu_lms_objectives" action="action_plan_template" sequence="25"/>

        <!-- Commentez le tableau de bord pour l'instant -->
        <!--
        <menuitem id="menu_objectives_dashboard"
                  name="Tableau de bord"
                  parent="menu_lms_objectives"
                  sequence="40"
                  action="action_objectives_dashboard"/>
        -->
    </data>
</odoo>