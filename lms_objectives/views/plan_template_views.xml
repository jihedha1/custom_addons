<!-- lms_objectives/views/plan_template_views.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="view_plan_template_tree" model="ir.ui.view">
            <field name="name">lms_objectives.plan_template.tree</field>
            <field name="model">lms_objectives.plan_template</field>
            <field name="arch" type="xml">
                <tree string="Modèles de plans">
                    <field name="name"/>
                    <field name="plan_type"/>
                    <field name="plan_count" widget="statinfo"/>
                    <field name="active" widget="boolean"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_plan_template_form" model="ir.ui.view">
            <field name="name">lms_objectives.plan_template.form</field>
            <field name="model">lms_objectives.plan_template</field>
            <field name="arch" type="xml">
                <form string="Modèle de plan">
                    <header>
                        <field name="active" widget="boolean"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom du modèle"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Configuration">
                                <field name="plan_type"/>
                                <field name="default_estimated_hours"/>
                                <field name="default_duration_days"/>
                            </group>
                            <group string="Statistiques">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="plan_count" widget="statinfo"/>
                                    </span>
                                    <span class="o_stat_text">Plans créés</span>
                                </div>
                            </group>
                        </group>

                        <notebook>
                            <page string="Objectifs par défaut">
                                <field name="default_objective_ids" widget="many2many_tags"/>
                            </page>

                            <page string="Contenu par défaut">
                                <group>
                                    <field name="default_specific_objectives" nolabel="1"/>
                                </group>
                            </page>

                            <page string="Approche par défaut">
                                <group>
                                    <field name="default_pedagogical_approach" nolabel="1"/>
                                </group>
                            </page>

                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action et menu -->
        <record id="action_plan_template" model="ir.actions.act_window">
            <field name="name">Modèles de plans</field>
            <field name="res_model">lms_objectives.plan_template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez vos modèles de plans de formation
                </p>
            </field>
        </record>

        <menuitem id="menu_plan_template"
                  name="Modèles de plans"
                  parent="lms_objectives.menu_main"
                  action="action_plan_template"
                  sequence="20"/>
    </data>
</odoo>