<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view objectifs SMART -->
        <record id="view_smart_objective_tree" model="ir.ui.view">
            <field name="name">formation.smart.objective.tree</field>
            <field name="model">formation.smart.objective</field>
            <field name="arch" type="xml">
                <tree string="Objectifs SMART">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="channel_id"/>
                    <field name="mastery_level"/>
                    <field name="evaluation_method"/>
                    <field name="weight"/>
                    <field name="is_mandatory"/>
                    <field name="achievement_rate" widget="progressbar" options="{'current_value': 'achievement_rate', 'max_value': '100'}"/>
                </tree>
            </field>
        </record>

        <!-- Form view objectifs SMART -->
        <record id="view_smart_objective_form" model="ir.ui.view">
            <field name="name">formation.smart.objective.form</field>
            <field name="model">formation.smart.objective</field>
            <field name="arch" type="xml">
                <form string="Objectif SMART">
                    <header>
                        <field name="achievement_rate" widget="progressbar" options="{'current_value': 'achievement_rate', 'max_value': '100'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Intitulé de l'objectif..."/>
                            </h1>
                            <field name="channel_id"/>
                        </div>

                        <notebook>
                            <page string="Critères SMART" name="smart_criteria">
                                <group>
                                    <group string="Spécifique (S)">
                                        <label for="specific"/>
                                        <field name="specific" nolabel="1"/>
                                    </group>
                                    <group string="Mesurable (M)">
                                        <label for="measurable"/>
                                        <field name="measurable" nolabel="1"/>
                                    </group>
                                    <group string="Atteignable (A)">
                                        <label for="achievable"/>
                                        <field name="achievable" nolabel="1"/>
                                    </group>
                                    <group string="Pertinent (R)">
                                        <label for="relevant"/>
                                        <field name="relevant" nolabel="1"/>
                                    </group>
                                    <group string="Temporel (T)">
                                        <label for="time_bound"/>
                                        <field name="time_bound" nolabel="1"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Classification" name="classification">
                                <group>
                                    <group string="Compétences">
                                        <field name="skill_ids" widget="many2many_tags"/>
                                        <field name="mastery_level"/>
                                        <field name="evaluation_method"/>
                                    </group>
                                    <group string="Métadonnées">
                                        <field name="sequence"/>
                                        <field name="weight"/>
                                        <field name="is_mandatory"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view objectifs SMART -->
        <record id="view_smart_objective_search" model="ir.ui.view">
            <field name="name">formation.smart.objective.search</field>
            <field name="model">formation.smart.objective</field>
            <field name="arch" type="xml">
                <search string="Rechercher objectifs">
                    <field name="name"/>
                    <field name="channel_id"/>
                    <field name="mastery_level"/>
                    <field name="evaluation_method"/>
                    <filter string="Obligatoires" name="mandatory" domain="[('is_mandatory', '=', True)]"/>
                    <filter string="Avec compétences" name="with_skills" domain="[('skill_ids', '!=', False)]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Formation" name="group_by_channel" context="{'group_by': 'channel_id'}"/>
                        <filter string="Niveau" name="group_by_level" context="{'group_by': 'mastery_level'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>